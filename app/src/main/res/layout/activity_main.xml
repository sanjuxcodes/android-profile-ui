<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#101010"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Headr -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <!-- Profile Sec -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SanjuXcodes"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="member since may, 2024"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divder -->
        <View
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333" />

        <!-- Credit Score-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="credit score • REFRESH AVAILABLE"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="757"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <!-- LCashback -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lifetime cashback"
            android:textColor="#BBBBBB"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- Balance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bank balance"
            android:textColor="#BBBBBB"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!--Rewards -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR REWARDS &amp; BENEFITS"
            android:textColor="#888888"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textSize="14sp" />

        <!--Cashback -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cashback balance"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- coins -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coins"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26,46,583"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- refer & Earn -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="win upto Rs 100"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="refer and earn"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Transactions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSACTIONS &amp; SUPPORT"
            android:textColor="#888888"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="all transactions"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
